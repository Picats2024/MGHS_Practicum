<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Headings -->
    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="labelHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="input">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/outline</item>
    </style>

    <!-- Buttons -->
    <style name="btnFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#418043</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="btnOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">#418043</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">#418043</item>
    </style>

    <style name="imgBtn">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Radio Buttons -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/outline</item>
        <item name="android:button">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="app:layout_columnWeight">1</item>
        <item name="app:layout_gravity">fill_horizontal</item>
    </style>

    <style name="RadioButtonIconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Buttons -->

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">#418043</item>
        <item name="android:strokeColor">#418043</item>
        <item name="android:strokeWidth">2</item>
    </style>

    <style name="GridButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>

    <!-- Information Cards -->

    <style name="InfoCardStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#55A630</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="InfoCardHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Quick Links -->

    <style name="QuickLinkCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="QuickLinkCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuickLinkCardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="QuickLinkCardTextContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="layout_constraintWidth_default">spread</item>
    </style>

    <style name="QuickLinkCardHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="QuickLinkCardBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Detailed Card -->
    <style name="DetailedCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_box_1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="DetailedCardHeadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#418043</item>
    </style>

    <style name="DetailedCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>


</resources>
