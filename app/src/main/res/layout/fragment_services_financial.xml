<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesDetailedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ServicesDetailedFragment"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/serviceCategoryHeading"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial" />

        <!-- Detailed Service 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/detailedCard1"
                style="@style/DetailedCardStyle">

                <TextView
                    style="@style/DetailedCardHeadingStyle"
                    android:text="Financial Resource" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/financial_resource" />

                <TextView
                    style="@style/DetailedCardTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/financial_resource_details"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detailed Service 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/detailedCard2"
                style="@style/DetailedCardStyle">

                <TextView
                    style="@style/DetailedCardHeadingStyle"
                    android:text="Accounting" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/accounting" />

                <TextView
                    style="@style/DetailedCardTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accounting_details" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
